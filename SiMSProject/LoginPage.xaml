<Page x:Class="SiMSProject.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SiMSProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid>
        <Grid>
            <StackPanel VerticalAlignment="Center">
                <Label HorizontalAlignment="Center" Margin="0,0,190,0">Username</Label>
                <TextBox x:Name="username"  Width="250" Height="20"></TextBox>
                <Label HorizontalAlignment="Center" Margin="0,10,190,0">Password</Label>
                <TextBox x:Name="password" Width="250" Height="20"></TextBox>
                <Button Width="70" Name="LoginButton" Margin="181,10,0,0" Click="LoginUser">Submit</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
