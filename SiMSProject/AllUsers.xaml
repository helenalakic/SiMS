<Page x:Class="SiMSProject.AllUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SiMSProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="870" Background="White"
      Title="AllUsers">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid Height="35" Background="White">
                <Button  Content="Sign out"  HorizontalAlignment="Left" Margin="689,8,0,0" VerticalAlignment="Top" Width="75" Click="GoBack" ></Button>
            </Grid >
            <StackPanel Orientation="Horizontal"  Height="415" Background="White">
                <StackPanel  Height="415" Width="210">
                    <Image Width="100" Height="100"/>
                    <Button Padding="10"  Margin="0,0,0,0" BorderBrush="Transparent" Background="Transparent" Content="Medicines" Click="ToMedicines"/>
                    <Button Padding="10"  Margin="0,0,0,0" BorderBrush="Transparent" Background="Transparent" Content="Register new users" Click="ClickToRegistration"/>
                    <Button Padding="10"  Margin="0,0,0,0" BorderBrush="Transparent" Background="Transparent" Content="All users" />
                    <Button Padding="10"  Margin="0,0,0,0" BorderBrush="Transparent" Background="Transparent" Content="Medicines creation" />

                </StackPanel>
                <Grid Width="660"  Height="418">
                    <Label Content="Sort by:" FontFamily="Georgia" Margin="-600,59,0,0" VerticalAlignment="Top" Height="30" Width="70" FontSize="16"/>
                    <ComboBox Margin="-420,60,0,0" Name="ComboBoxSort" SelectionChanged="SortBy" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Height="25">
                        <!--<ComboBoxItem Content=""></ComboBoxItem>-->
                        <ComboBoxItem Content="First name" ></ComboBoxItem>
                        <ComboBoxItem Content="Last name"></ComboBoxItem>
                    </ComboBox>
                    <ComboBox Margin="-200,60,0,0" Name="ComboBoxSortBy" SelectionChanged="SortByAscDesc" HorizontalAlignment="Center" VerticalAlignment="Top" Width="80" Height="25">
                        <!--<ComboBoxItem Content=""></ComboBoxItem>-->
                        <ComboBoxItem Content="Ascending" ></ComboBoxItem>
                        <ComboBoxItem Content="Descending"></ComboBoxItem>
                    </ComboBox>

                    
                    <Label Content="Filter by:" FontFamily="Georgia" Margin="155,59,0,0" VerticalAlignment="Top" Height="30" Width="85" FontSize="16"/>
                    <ComboBox Margin="335,60,0,0" Name="ComboBoxSearch" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Height="25">
                        <!--<ComboBoxItem Content=""></ComboBoxItem>-->
                        <ComboBoxItem Content="Doctor" ></ComboBoxItem>
                        <ComboBoxItem Content="Pharmacist"></ComboBoxItem>
                    </ComboBox>
                    <!--<Button Content="Medical record " Height="30" Width="110" Margin="445,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="OpenMedicalRecord" Grid.ColumnSpan="2"/>
                    <Button Content="Issue a prescription" Height="30" Width="110" Margin="325,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="OpenIssuePrescripption"/>-->

                    <DataGrid x:Name="dataGridUsers" d:ItemsSource="{Binding Users}" IsReadOnly="True "  
                  SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Left" 
                  Height="270" VerticalAlignment="Top" Width="560" Margin="0,95,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="UMCN" Binding="{Binding Umcn}" Width="*"/>
                            <DataGridTextColumn Header="email" Binding="{Binding Email}" Width="100" />
                            <DataGridTextColumn Header="firstName" Binding="{Binding FirstName}" Width="*" />
                            <DataGridTextColumn Header="lastName" Binding="{Binding LastName}" Width="*" />
                            <!--<DataGridTextColumn Header="ingredient" Binding="{Binding Medicine.INGREDIENT}" Width="*"/>-->
                            <DataGridTextColumn Header="phoneNumber" Binding="{Binding PhoneNumber}" Width="*" />
                            <DataGridTextColumn Header="userType" Binding="{Binding UserType}" Width="*" />
                            <DataGridTemplateColumn Header="Block" Width="53">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="Block_btn" Content="Block" Click="BlockButton" Background="#1d2345" Foreground="White"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Unblock" Width="53">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="Unblock_btn" Content="Unblock" Click="UnblockButton" Background="#1d2345" Foreground="White"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
